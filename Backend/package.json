    "@fastify/helmet": "^13.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "firebase-admin": "^13.0.2",
    "helmet": "^8.0.0",
    "pg": "^8.13.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "redis": "^4.7.0",
    "socket.io": "^4.8.1",
    "zod": "^3.23.8"
